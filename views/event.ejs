<%- include('./partials/header')%>
<style>
  .containers {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(18rem, 1fr));
    grid-gap: 20px;
    justify-content: center;
}
@media screen and (max-width: 600px) {
    .containers {
      grid-template-columns: repeat(1, 1fr);
    }
  }
li {
  list-style-type: none;
}

.card {
    height: 400px;
    padding: 20px 10px;
    border: none;
    position: relative;
    cursor: pointer;
    overflow: hidden;
}

.card img {
    width: 100%;
    height: auto;
    transition: ease-in 0.2s;
    border-radius: 5px;
}

.card-body{
    display: flex;
    flex-direction: column;
    align-items: start;
}

.card-title {
    font-size: 20px;
    font-weight: 700;
    margin: 5px 0;
}
.price {
    font-size: 17px;
    margin: 5px 0;
    color: rgb(95, 95, 95);
}

.buttons {
    margin-top: auto;
}

nav .page-link {
  color: black;
}
nav .page-link:hover {
  color: black;
}
.form-select:focus {
    outline: none;
    box-shadow: none;
    border-color: inherit;
  }
 
</style>

<section style="min-height: 100vh" class="container">
  <div class="product" style="margin-top: 100px; margin-bottom: 100px; ">

    <ul class="containers">
        <% products.forEach(item => { %>
      <li>
          <div class="card" style="width: 18rem; height: 500px;" >
            <div class="img_container" style="height: 60%;">
                <a href="/products/api/<%= item._id %>"><img src="<%= item.url %>" class="card-img-top" alt="Product Image"></a>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <h5 class="price"><%= item.description %></h5>
            </div>
            <div class="buttons">
                <button type="button" class="btn btn-dark delete-btn" data-id="<%= item._id %>">DELETE</button>
            </div>
          </div>
      </li>
      <% }) %>
    </ul>
  </div>
</section>

</body>
<script>

  const deleteButton = document.querySelectorAll(".delete-btn")

  deleteButton.forEach(button => {
    button.addEventListener('click', () => {
      const id = button.dataset.id
      console.log(button.dataset.id)
      fetch(`/products/file/${id}`, {
      method: "DELETE"
    })
    .then(response => {
      response.json()
    })
    .then(response => {
      window.location.reload()
    })
    .catch(err => console.log(err))
    })
  })

