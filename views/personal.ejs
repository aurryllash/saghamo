<%- include('./partials/header')%>
<style>
  .file_title {
    font-size: 3rem;
    font-weight: 800;
  }
  .file_data {
    font-size: 2.5rem; 
    font-weight: 700; 
    opacity: 80%;
  }
  .soundcloud {
    width: 60%;
    margin-top: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
@media (max-width: 768px) {
  .file_title {
    font-size: 2.5rem;
  }
  .file_data {
    font-size: 2rem;
  }
}

@media (max-width: 576px) {
  .file_title {
    font-size: 2rem;
  }
  .file_data {
    font-size: 1.5rem;
  }
}
</style>

<section class="container" style="min-height: 100vh; margin-top: 100px;">

    <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 col-md-12 text-center">
            <img style="max-width: 100%; height: auto;" src="<%= artist[0].url %>" alt="">
          </div>
          <div class="col-lg-6 col-md-12 text-center text-lg-start">
            <div class="file_body">
                <p class="file_title"><%= artist[0].name %></p>
                <p class="file_data"><%= artist[0].description %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="links">
        <% Object.keys(artist[0].links).forEach(key => { %>
            <% if(artist[0].links[key]) { %>
                <p><a href="<%= artist[0].links[key] %>"><%= key %></a></p>
            <% } %>
        <% }) %>
      </div>

      <div class="soundcloud" >
        <%- artist[0].soundCloud_embed %>
      </div>
</section>