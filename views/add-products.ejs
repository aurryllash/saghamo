<%- include('./partials/header')%>
<style>
    h1{

    font-size: 30px;
    font-weight: 900;
    margin-top: 40px;
    margin-left: 20px;

}
</style>
<section style="padding: 0 0 150px 0; min-height: 100vh;" >
    
    <div class="container">
        <h1>ADD PRODUCT</h1>
        <form id="productForm" style="width: 400px;" action="/events/upload" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Adidas Hoodie..." required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" name="description" id="description" placeholder="description..." required>
            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Image</label>
                <input type="file" class="form-control" name="image" id="Image"  accept="image/*" required>
            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Image 1</label>
                <input type="file" class="form-control" name="image1" id="Image1"  accept="image/*" required>
            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Image 2</label>
                <input type="file" class="form-control" name="image2" id="Image2"  accept="image/*" required>
            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Image 3</label>
                <input type="file" class="form-control" name="image3" id="Image3"  accept="image/*" required>
            </div>
            <button type="submit" id="submitBtn" class="btn btn-success">Submit</button>
            <a class="btn btn-light" href="/home" style="background-color: rgb(189, 189, 189); color: whitesmoke; margin-left: 20px;">Cancel</a>
        </form>
    </div>
</section>

<script>
    const form = document.getElementById('productForm')

    form.addEventListener('submit', (event) => {
        event.preventDefault();
        
        const formData = new FormData(form)
        
        fetch('/events/upload', {
            method: 'post',
            body: formData
        })
        .then(res => res.json())
        .then(res => {
            window.location.href = '/events'
        })
        .catch(error => console.log(error))
    })
</script>